@page
@model RazorPizzarie.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-black text-capitalize">Our classic selection of pizza</h1>
        <h4>Choose one, or try our pizza Builder! Then Order and Done</h4>
        <h4>No need to give amy of your details!</h4>
        <h4>We already know everything!</h4>
        <p class="smallText text-primary"><i>Only one pizza per Order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/doopizzza.jpg" class="w-100 rounded-circle m-5"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText p-4">
                            <h3 style="text-align:left">Create your own Pizza</h3>
                            <p style="text-align: left">Make your own pizza with PizzaMaker!</p>
                            <a class="btn btn-success" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try now!</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 mb-5">
                <img src="~/images/Carbonara.png" class="w-100 rounded-end" asp-append-version="true"/>
                <a class="btn btn-primary" asp-area="" asp-page="Checkout/Checkout">Get this pizza</a>
                <br />
            </div>
        </div>
    </div>
</div>
